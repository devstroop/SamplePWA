@page "/add-sale"
@attribute [Authorize]

<PageTitle>Add Sale</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Sale</RadzenAlert>
        <RadzenTemplateForm TItem="SamplePWA.Server.Models.SampleDB.Sale" Data="@sale" Visible="@(sale != null && canEdit)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Sale I D" Component="SaleID" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@sale.SaleID" Name="SaleID" />
                    <RadzenRequiredValidator Component="SaleID" Text="SaleID is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Customer" Component="Customer" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@customersForCustomerID" TextProperty="Name" ValueProperty="CustomerID" AllowClear=true
                         Placeholder="Choose Customer" style="display: block; width: 100%" @bind-Value="@sale.CustomerID" Name="CustomerID"
                        SelectedValue=@customersForCustomerIDValue Count=@customersForCustomerIDCount LoadData=@customersForCustomerIDLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Employee" Component="Employee" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@employeesForEmployeeID" TextProperty="FirstName" ValueProperty="EmployeeID" AllowClear=true
                         Placeholder="Choose Employee" style="display: block; width: 100%" @bind-Value="@sale.EmployeeID" Name="EmployeeID"
                        SelectedValue=@employeesForEmployeeIDValue Count=@employeesForEmployeeIDCount LoadData=@employeesForEmployeeIDLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Sale Date" Component="SaleDate" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@sale.SaleDate" Name="SaleDate" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Total Amount" Component="TotalAmount" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@sale.TotalAmount" Name="TotalAmount" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Status" Component="Status" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sale.Status" Name="Status" />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

